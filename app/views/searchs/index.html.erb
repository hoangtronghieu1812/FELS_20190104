<div class="super_container">
<div class="active">
<h2 class="headertekst"><%= t ".courses" %></h2>
</div>
  <% unless @courses.blank? %>
    <div class="row courses_row">
      <%= render partial: "courses/course",
        collection: @courses %>
    </div>
  <% else %>
    <p> <%= t(".doesnot_match") %> </p>
  <% end %>
<div class="active">
<h2 class="headertekst"><%= t ".words" %></h2>
</div>
 <% unless @words.blank? %>
<ul class="search_results">
  <% @words.with_highlights.each do |word, highlight| %>
    <li>
      <p><%= highlight[:content].html_safe %></p>
    </li>
  <% end %>
</ul>
<% else %>
  <p> <%= t(".doesnot_match") %> </p>
<% end %>

  <div class="paginator">
    <%= paginate @words %>
  </div>
</div>

<div class="form-horizontal denser">
<%= form_for @word, url: new_word_path(model_name: "word") do |f| %>
  <div class= "form-group control-group string_type name_field">
    <%= f.label :content, class: "col-sm-2 control-label" %>
      <%= f.text_field :content, class: "col-sm-10 form-control" %>
  </div>
  <div class= "form-group control-group string_type name_field">
    <%= f.label :course, class: "col-sm-2 control-label" %>
    <div class="col-sm-10 controls">
      <%= f.select(:course_id) do %>
        <% Course.all.each do |c| -%>
          <%= content_tag(:option, c.name, value: c.id) %>
        <% end %>
      <% end %>
    </div>
  </div>
  <%= render "form", f: f %>
  <div class="col-sm-offset-2 col-sm-10">
    <%= f.submit t(".save"), class: "btn btn-primary" %>
  </div>
<% end %>
</div>

<li>
  <div class="comment_item d-flex flex-row align-items-start jutify-content-start">
    <div class="comment_image"><div><%= link_to image_tag(activity.recipient.image.url), activity.recipient %></div></div>
    <div class="comment_content">
      <div class="comment_title_container d-flex flex-row align-items-center justify-content-start">
        <div class="comment_author"><%= link_to t(".rela"),
           activity.recipient %></div>
        <div class="comment_time ml-auto"><%= time_ago_in_words(activity.created_at) %></div>
      </div>
      <div class="comment_text">
      <p>
        <%= link_to(activity.owner.name, user_path(activity.owner)) << t(".unfollow") <<
          link_to(activity.recipient.name, user_path(activity.recipient)) %>
      </p>
      </div>
    </div>
  </div>
</li>

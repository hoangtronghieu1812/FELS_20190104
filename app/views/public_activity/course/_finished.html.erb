<li>
  <div class="comment_item d-flex flex-row align-items-start jutify-content-start">
    <div class="comment_image"><div><%= link_to image_tag(activity.owner.image.url), courses_path %></div></div>
    <div class="comment_content">
      <div class="comment_title_container d-flex flex-row align-items-center justify-content-start">
        <div class="comment_author"><%= link_to t(".course"), courses_path %></div>
        <div class="comment_time ml-auto"><%= time_ago_in_words(activity.created_at) %></div>
      </div>
      <div class="comment_text">
      <p>
        <span><%= link_to(activity.owner.name, user_path(activity.recipient)) <<
          t(".finish") %></span>
        <span><%= link_to Course.find(activity.trackable_id)
          .name, courses_path %></span>
      </p>
      </div>
    </div>
  </div>
</li>
